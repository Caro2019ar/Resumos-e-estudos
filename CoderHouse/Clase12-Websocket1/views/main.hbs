<div clas="container-sm" style="padding: 50px 50px 10px">
  <h3 style="color: blue">Vista de productos</h3>
  <br>

  {{#if lista.[0]}}
  <table class="table table-dark">
    <thead>
      <tr>
        <th scope="col">Nombre</th>
        <th scope="col">Precio</th>
        <th scope="col">Foto</th>

      </tr>
    </thead>
    <tbody>
      {{#each lista}}
      <tr>
        <td>{{this.title}}</td>
        <td>{{this.price}}</td>
        <td><img src={{this.thumbnail}} width=50 height=50></td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  {{else}}
  <div clas="container-sm" style="background-color: #fdf1d6; padding: 10px 10px
    10px">
    <h5 style="color: #91684a"> No se encontraron productos </h5>
  </div>
  {{/if}}
